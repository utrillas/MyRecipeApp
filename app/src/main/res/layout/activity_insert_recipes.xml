<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/logo2"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".InsertRecipes"
        android:background="@color/logo2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/inText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="NEW RECIPE"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/logo3"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:id="@+id/inname"
            app:layout_constraintTop_toBottomOf="@+id/inText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/logo3"
            android:hint="Enter the name"
            android:paddingStart="5dp"
            android:textColor="@color/white"
            />
        <Spinner
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/spinner"
            app:layout_constraintTop_toBottomOf="@+id/inname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/inphoto"
            android:layout_marginBottom="20dp"
            android:background="@color/logo3"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/inphoto"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image2"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/capturebtn"
            app:layout_constraintTop_toBottomOf="@+id/inphoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textIngre"
            android:layout_marginEnd="15dp"
            android:onClick="setOnClickListener"
            android:src="@drawable/camara"
            android:longClickable="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/textIngre"
            app:layout_constraintTop_toBottomOf="@+id/inphoto"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="INGREDIENTES"
            android:textColor="@color/logo3"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/inIngredients"
            />

        <EditText
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/inIngredients"
            android:hint="Ingredients"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/textIngre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            android:background="@color/logo3"
            android:textColor="@color/black"
            android:paddingStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            />

        <androidx.camera.view.PreviewView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cameraView"
            app:layout_constraintTop_toBottomOf="@+id/inphoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/textdesc"
            app:layout_constraintTop_toBottomOf="@+id/inIngredients"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="DESCRIPTION"
            android:textColor="@color/logo3"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/inreceta"/>
        <EditText
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/inreceta"
            android:hint="recipe description"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/textdesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            android:background="@color/logo3"
            android:textColor="@color/black"
            android:paddingStart="5dp"
            android:layout_marginStart="5dp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inreceta"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            >
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnInto"
            app:layout_constraintTop_toBottomOf="@+id/inreceta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnout"
            android:layout_marginTop="15dp"
            android:src="@drawable/intorec"
            android:layout_marginEnd="50dp"
            android:onClick="inToRec"
            />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnout"
            app:layout_constraintTop_toBottomOf="@+id/inreceta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnInto"
            android:layout_marginTop="15dp"
            android:src="@drawable/salir"
            android:onClick="inToexit"
            />

        </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>